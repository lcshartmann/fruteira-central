generator client {
  provider = "prisma-client-js"
}
datasource db {
  provider = "sqlite"
  url      = "file:./local.db"
}

enum unitType {
  un
  kg
}

enum payMethod{
  credit_card
  cash
  pix
}

model Product {
  id Int @id @default(autoincrement()) @unique
  name String
  price Float
  unitType unitType
  inStock Boolean
  ItemSale ItemSale[]
}

model ItemSale {
  id String @id @default(uuid())
  productId Int 
  product Product @relation(fields: [productId], references: [id])
  quantity Float
  unitPrice Float
  sale Sale @relation(fields: [saleId], references: [uuid])
  saleId String
}

model Sale {
  uuid String @default(uuid()) @unique
  saleNumber  Int @id @unique @default(autoincrement())
  method payMethod
  subtotal Float
  discount Float @default(0)
  total Float
  date DateTime @default(now())
  items ItemSale[]
}
